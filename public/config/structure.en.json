    "requests": {
        "r2d2-login": {
            "label": "r2d2-login-post",
            "description": "Heidi calls for a ride with R2  ;-)",
            "api": {
                "target": "http://130.183.216.136/r2d2/login",
                "method": "post",
                "schema": {
                    "data": "{*}",
                    "header-get": {
                        "Authorization": "token"
                    }
                }
            },
            "form": {
                "dd-auth": {
                    "type": "dropdown",
                    "label": "mocky login",
                    "sendKey": "",
                    "options": [
                        {
                            "text": "login",
                            "value": {
                                "username": "testuser@mpdl.mpg.de",
                                "password": "test"
                            }
                        }
                    ],
                    "selected": 0
                }
            }
        },
        "r2d2-file-create": {
            "label": "r2d2-file-create",
            "description": "Creates a file in dataset",
            "api": {
                "target": "http://130.183.216.136/r2d2/datasets/{dataset-id}/files",
                "method": "post",
                "schema": {
                    "data": null,
                    "header-set": {
                        "Authorization": "token",
                        "X-File-Name": "file-name",
                        "X-File-Total-Size": "file-size"
                    }
                }
            },
            "form": {
                "dataset-id": {
                    "type": "dropdown",
                    "label": "select target dataset",
                    "options": ["a6124f2a-9a06-489d-a7e2-40b583ebbd23", "282fbbe0-97b3-40c6-aa8a-37fcf29c734b"],
                    "selected": 0
                },
                "file-name": {
                    "type": "dropdown",
                    "label": "select target mock-filename",
                    "options": ["api-crasher-2", "chakka lakka"],
                    "selected": 0
                },
                "file-size": {
                    "type": "dropdown",
                    "label": "select target mock-filesize",
                    "options": [556333, 77766777],
                    "selected": 0
                }
            }
        },
        "r2d2-dataset-update": {
            "label": "r2d2-dataset-update",
            "description": "Updates a dataset (metadata)",
            "api": {
                "target": "http://130.183.216.136/r2d2/datasets/{dataset-id}",
                "method": "put",
                "schema": {
                    "data": "{*}",
                    "data-setXX": {
                        "modificationDate": {
                            "key": "DateToIsoString",
                            "value": "now"
                        }
                    },
                    "header-set": {
                        "Authorization": "token"
                    }
                }
            },
            "form": {
                "dataset-id": {
                    "type": "dropdown",
                    "label": "mocky update values",
                    "options": [
                        {
                            "text": "Uri Zatonga: *-32ca3f9c43b3",
                            "value": "24dc7aba-901b-4d6d-bc4b-32ca3f9c43b3"
                        }
                    ],
                    "selected": 0
                },
                "update": {
                    "type": "dropdown",
                    "label": "mocky update values",
                    "sendKey": "",
                    "options": [
                        {
                            "text": "Uri Zatonga's Amazin World Formula",
                            "value": {
                                "modificationDate": "Should be: modificationDate from source file",
                                "metadata": {
                                    "title": "Uri Zatonga's Amazi'n World Formula"
                                }
                            }
                        },
                        {
                            "text": "DOI: 999",
                            "value": {
                                "modificationDate": "Should be: modificationDate from source file",
                                "metadata": {
                                    "doi": 999
                                }
                            }
                        }
                    ],
                    "selected": 0
                }
            }
        },
        "r2d2-dataset-create": {
            "label": "r2d2-dataset-create",
            "description": "Creates a dataset",
            "api": {
                "target": "http://130.183.216.136/r2d2/datasets/",
                "method": "post",
                "schema": {
                    "data": "*",
                    "header-set": {
                        "Authorization": "token"
                    }
                }
            },
            "form": {
                "create": {
                    "type": "dropdown",
                    "label": "mocky create dataset",
                    "sendKey": "",
